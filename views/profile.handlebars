<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Blog Post:</h3>

      <form class="form new-blogpost-form">
        <div class="form-group">
          <label for="blogpost-title">Title:</label>
          <input class="form-control" type="text" id="blogpost-title" name="blogpost-title" />
        </div>

        <div class="form-group">
          <label for="blogpost-content">Content:</label>
          <textarea class="form-control" id="blogpost-content" name="blogpost-content"></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>

    {{#if blogs.length}}
    <div class="col-md-6 blogpost-list">
      <h3>Current Blog Posts:</h3>

      {{#each blogs}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/blog/{{this.id}}">{{this.title}}</a></h4>
          <p>{{this.content}}</p>
          <p>Created on: {{this.date_created}}</p>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger delete-btn" data-id="{{this.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="/profile.js"></script>